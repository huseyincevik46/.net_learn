@model basics.Models.Course

<div class="card mb-3" id="@Model.id">
    <div class="row">
        <div class="col-md-4">
        
            <img src="~/img/1.img"  style="max-width: 100%; height: auto;"  
            class="img-fluid rounded-start" alt="" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a class="nav-link" asp-controller="Course" asp-action="Details" >@Model.title</a>
                
                <p class="card-text">Kurslar</p>
            </div>
        </div>
    </div>
</div>
